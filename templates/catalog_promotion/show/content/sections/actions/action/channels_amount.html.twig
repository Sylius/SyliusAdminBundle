{% import '@SyliusAdmin/shared/helper/money.html.twig' as _money %}

{% set currencies = sylius_channels_currencies() %}

{% for channelCode, channelConfiguration in hookable_metadata.context.action.configuration %}
    <div class="row">
        <div class="col-12 col-md-4 fw-bold">{{ channelCode }}</div>
        <div class="col-12 col-md-8" {{ sylius_test_html_attribute(channelCode ~ '-amount') }}>
            {{ _money.format(channelConfiguration['amount'], currencies[channelCode]) }}
        </div>
    </div>
{% endfor %}
