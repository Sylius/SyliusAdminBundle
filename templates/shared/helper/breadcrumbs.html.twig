{% macro default(breadcrumbs) %}
    <ol class="breadcrumb" aria-label="breadcrumbs">
        {% for breadcrumb in breadcrumbs %}
            {% if breadcrumb is not empty %}
                <li class="breadcrumb-item {{ breadcrumb.active is defined and breadcrumb.active ? "active" }}">
                    {% if breadcrumb.url is defined %}
                        <a href="{{ breadcrumb.url }}">{{ breadcrumb.name|trans }}</a>
                    {% else %}
                        {{ breadcrumb.name|trans }}
                    {% endif %}
                </li>
            {% endif %}
        {% endfor %}
    </ol>
{% endmacro %}
