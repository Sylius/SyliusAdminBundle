{% import '@SyliusAdmin/shared/helper/translations.html.twig' as translations %}

{% set form = hookable_metadata.context.form %}

<div class="tab-pane" id="product-variant-translations" role="tabpanel" tabindex="0">
    <div class="card mb-3">
        <div class="card-header">
            <h2 class="card-title">
                {{ 'sylius.ui.translations'|trans }}
            </h2>
        </div>
        {% set body %}
            {% verbatim %}
                <div class="row">
                    <div class="col-12 col-md-6">
                        {{ form_row(translation_form.name) }}
                    </div>
                </div>
            {% endverbatim %}
        {% endset %}
        {{ translations.default(form.translations, body, { accordion_id: 'product-variant-translations', accordion_flush: true }) }}
    </div>
</div>
