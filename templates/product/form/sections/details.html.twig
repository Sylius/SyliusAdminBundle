{% set form = hookable_metadata.context.form %}
{% set product = form.vars.data %}

<div class="tab-pane show active" id="product-details" role="tabpanel" tabindex="0">
    <div class="card mb-3">
        <div class="card-header">
            <h2 id="product-details" class="card-title">
                {{ 'sylius.ui.details'|trans }}
            </h2>
        </div>
        <div class="card-body">
            {% hook 'details' with { product } %}
        </div>
    </div>
</div>
