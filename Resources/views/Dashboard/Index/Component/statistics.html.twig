{% set main_hook = hook_name(hookable_data.parent_main_hook, 'statistics') %}
{% set fallback_hook = hook_name(hookable_data.parent_fallback_hook, 'statistics') %}

<div class="container-xl" {{ attributes }}>
    {% hook [main_hook, fallback_hook] with {
        parent_main_hook: main_hook,
        parent_fallback_hook: fallback_hook,
        statisticsData: statistics,
        range,
    } %}
</div>
