<div class="ui tab" data-tab="taxonomy">
    <h3 class="ui dividing header">{{ 'sylius.ui.taxonomy'|trans }}</h3>
    <div class="field">
        {{ form_label(form.mainTaxon) }}
        <div class="taxon-select ui fluid search selection dropdown" data-url="{{ path('sylius_admin_ajax_taxon_index') }}">
            {{ form_widget(form.mainTaxon, {'attr': {'class' : 'autocomplete'}}) }}
            <i class="dropdown icon"></i>
            <div class="default text">{{'sylius.ui.select_taxon'|trans}}</div>
            <div class="menu">
                {% if product.mainTaxon is not null %}
                    <div class="item" data-value="{{ product.mainTaxon.id }}">{{ product.mainTaxon.name }}</div>
                {% endif %}
            </div>
        </div>
    </div>
    <div class="ui divider"></div>
    {{ form_row(form.productTaxons) }}
</div>
