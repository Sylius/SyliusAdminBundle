{% set main_hook = hook_name(hookable_data.parent_main_hook, 'form_body') %}
{% set fallback_hook = hook_name(hookable_data.parent_fallback_hook, 'form_body') %}

<div class="row">
    {{ form_errors(hookable_data.form) }}
    {{ form_widget(hookable_data.form._token) }}

    {% hook [main_hook, fallback_hook] with hookable_data|merge({
        parent_main_hook: main_hook,
        parent_fallback_hook: fallback_hook,
        form: hookable_data.form,
    }) %}
</div>
