{% set main_event = twig_event_name(_context.main_event, 'form_body') %}
{% set fallback_event = twig_event_name(_context.fallback_event, 'form_body') %}

<div class="row">
    {{ form_errors(form) }}
    {{ form_widget(form._token) }}

    {{ twig_event([main_event, fallback_event], _context|merge({
        main_event: main_event,
        fallback_event: fallback_event,
        form: _context.form,
    })) }}
</div>
