{% set main_event = twig_event_name(main_event, 'page_body') %}
{% set fallback_event = twig_event_name(fallback_event, 'page_body') %}

<div class="page-body">
    <div class="container-xl">
        {{ twig_event(
            [main_event, fallback_event],
            _context|merge({ main_event: main_event, fallback_event: fallback_event })
        ) }}
    </div>
</div>
