{%
    set viewOptions = {
    inactive: { color: '' },
    processing: { color: 'bg-blue-lt' },
    active: { color: 'bg-green-lt' },
    failed: { color: 'bg-red-lt' },
}
%}

{% set data = hookable_data.resource.state %}

<div class="row">
    <div class="col-12 col-md-4 fw-bold">{{ 'sylius.ui.state'|trans }}</div>
    <div class="col-12 col-md-8" {{ sylius_test_html_attribute('state') }}>
        <span class="badge {{ viewOptions[data]['color'] }}">
            {{ ('sylius.ui.' ~ data)|trans }}
        </span>
    </div>
</div>
