{% set main_hook = hook_name(hookable_data.parent_main_hook, 'scope') %}
{% set fallback_hook = hook_name(hookable_data.parent_fallback_hook, 'scope') %}

{% for scope in hookable_data.resource.scopes %}
    <div class="card mb-3">
        <div class="card-body">
            <div class="divide-y">
                {% hook [main_hook ~ "#" ~ scope.type, fallback_hook] with hookable_data|merge({
                    parent_main_hook: main_hook,
                    parent_fallback_hook: fallback_hook,
                    scope,
                }) %}
            </div>
        </div>
    </div>
{% endfor %}
