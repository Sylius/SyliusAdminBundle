{% set main_hook = hook_name(hookable_data.parent_main_hook, 'scopes') %}
{% set fallback_hook = hook_name(hookable_data.parent_fallback_hook, 'scopes') %}

<div class="col-12 col-md-6 mb-3">
    <div class="card" {{ sylius_test_html_attribute('scopes') }}>
        <div class="card-header">
            <div class="card-title">
                {{ 'sylius.ui.scopes'|trans }}
            </div>
        </div>
        <div class="card-body">
            <div class="row align-items-center">
                {{ form_row(hookable_data.form.scopes, {label: false}) }}

                {% hook [main_hook, fallback_hook] with hookable_data|merge({
                    parent_main_hook: main_hook,
                    parent_fallback_hook: fallback_hook,
                }) %}
            </div>
        </div>
        <div class="card-footer">
            {{ form_row(hookable_data.form.scopes.vars.button_add) }}
        </div>
    </div>
</div>
