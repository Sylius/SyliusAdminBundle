{% extends '@SyliusAdmin/Shared/Layout/base.html.twig' %}

{% set main_event = _context.metadata.applicationName ~ '.admin.' ~ _context.metadata.name ~ '.update' %}
{% set fallback_event = _context.metadata.applicationName ~ '.admin.' ~ 'update' %}

{% set header = configuration.vars.header|default(_context.metadata.applicationName ~ '.ui.' ~ _context.metadata.pluralName) %}

{% block title %}{{ header|trans }} | {{ parent() }}{% endblock %}

{% block body %}
    {{ sylius_template_event(
        [main_event, fallback_event],
        {
            main_event: main_event,
            fallback_event: fallback_event,
            resource: _context.resource,
            metadata: _context.metadata,
            configuration: _context.configuration,
            form: form,
        }
    ) }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ sylius_template_event([main_event ~ '.stylesheets', fallback_event ~ '.stylesheets']) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ sylius_template_event([main_event ~ '.javascripts', fallback_event ~ '.javascripts']) }}
{% endblock %}
